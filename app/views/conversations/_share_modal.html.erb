<dialog
  id="share-modal"
  class="modal no-focus-outline"
  data-controller="modal share"
  data-share-conversation-id-value="<%= conversation.id %>"
>
  <div class="modal-box max-w-2xl dark:bg-black">
    <header class="font-bold text-lg mb-5">
      <%= t('app.share.title') %>
    </header>

    <div class="space-y-4">
      <p class="text-gray-600 dark:text-gray-400">
        <%= t('app.share.description') %>
      </p>

      <div class="form-control">
        <label class="label">
          <span class="label-text"><%= t('app.share.url') %></span>
        </label>
        <div class="flex gap-2">
          <input
            type="text"
            readonly
            value="<%= conversation.generate_shareable_url(request) %>"
            data-share-target="urlInput"
            class="input input-bordered flex-1 bg-gray-50 dark:bg-gray-900"
          />
          <button
            type="button"
            data-action="share#copyToClipboard"
            class="btn btn-primary"
          >
            <%= icon "clipboard", variant: :outline, size: 20 %>
            <%= t('app.share.copy') %>
          </button>
        </div>
        <div
          data-share-target="copiedMessage"
          class="hidden text-sm text-green-600 dark:text-green-400 mt-2"
        >
          <%= t('app.share.copied') %>
        </div>
      </div>

      <div class="alert alert-warning">
        <%= icon "exclamation-triangle", variant: :outline, size: 20 %>
        <span><%= t('app.share.warning') %></span>
      </div>
    </div>
  </div>
  <form method="dialog" class="modal-backdrop no-focus-outline">
    <button><%= t('app.share.close') %></button>
  </form>
</dialog>